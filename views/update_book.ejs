
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/book"><i class="fas fa-angle-double-left"></i> All Books</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Book</h2>
            <span class="text-light">Use the below form to Update the Book</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_book">
    <div class="new_book">
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="hidden" name="id" value="<%= book._id %>">
            <input type="text" name="title" value="<%= book.title%>" placeholder=" ">
        </div>
        <div class="form-group">
            <label for="author" class="text-light">Author</label>
            <input type="text" name="author" value="<%= book.author%>" placeholder=" ">
        </div>
        <div class="form-group">
            <label for="category" class="text-light">Category</label>
            <input type="text" name="category" value="<%= book.category%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="availableCopies" class="text-light">Avaialable Copies</label>
            <input type="number" name="availableCopies" value="<%= book.availableCopies%>" placeholder=" ">
        </div>
        <div class="form-group">
            <label for="TotalCopies" class="text-light">Total Copies</label>
            <input type="number" name="totalCopies" value="<%= book.totalCopies%>" placeholder=" ">
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
